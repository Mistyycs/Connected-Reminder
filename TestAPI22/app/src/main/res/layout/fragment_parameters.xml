<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paramètres"
        android:textAlignment="center"
        android:textSize="50dp"
        android:textColor="@color/black"
        android:layout_marginTop="20dp"
    />

    <Switch
        android:id="@+id/notifications"
        android:layout_width="150dp"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="Notifications "
        android:textColor="@color/black"
        android:textSize="@dimen/activity_vertical_margin"/>

    <Switch
        android:id="@+id/standbymode"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:text="Standby Mode "
        android:textColor="@color/black"
        android:textSize="@dimen/activity_vertical_margin"/>

    <Switch
        android:id="@+id/pastaccessible"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:text="Consulter précédents "
        android:textColor="@color/black"
        android:textSize="@dimen/activity_vertical_margin"/>
    <Switch
        android:id="@+id/hourvisible"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:text="Visibilité de l'heure "
        android:textColor="@color/black"
        android:textSize="@dimen/activity_vertical_margin"/>
    <Switch
        android:id="@+id/sounds"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="-260dp"
        android:layout_marginLeft="240dp"
        android:text="Son"
        android:textColor="@color/black"
        android:textSize="@dimen/activity_vertical_margin"/>

    <Spinner
        android:id="@+id/police"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="220dp"
        android:entries="@array/police_size"

        />

    <Button
        android:id="@+id/add"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="250dp"
        android:background="@color/cardview_dark_background"
        android:text="Sauvegarder"
        android:textSize="24dp"/>


</LinearLayout>